'http://www.ieml.org/english/cycles.html
<(*,<$a --> event>,<$b --> event>) --> cycle>.
<<(*,$a,$b) --> cycle> ==> <$a =/> $b>>.


<(*,en,"life stage") --> (*,OO,OO)>.
<(*,en,"behavior") --> (*,OO,OM)>.
<(*,en,"governance") --> (*,OO,MO)>.
<(*,en,"action source") --> (*,OO,MM)>.

<(*,en,"empowerment") --> (*,OM,OO)>.
<(*,en,"performance") --> (*,OM,OM)>.
<(*,en,"production") --> (*,OM,MO)>.
<(*,en,"obstacle") --> (*,OM,MM)>.

<(*,en,"impermanent") --> (*,MO,OO)>.
<(*,en,"condition") --> (*,MO,OM)>.
<(*,en,"transformation") --> (*,MO,MO)>.
<(*,en,"trial") --> (*,MO,MM)>.

<(*,en,"meaning source") --> (*,MM,OO)>.
<(*,en,"development") --> (*,MM,OM)>.
<(*,en,"creation") --> (*,MM,MO)>.
<(*,en,"nature") --> (*,MM,MM)>.


'Element:
'Flow: Source,Target,Translator
<(*,<$s --> source>,<$t --> target>,<$p --> translator>) --> flow>.
<(*,$s,$t,$p) ==> <(*,$s,$t) --> $p>>.
